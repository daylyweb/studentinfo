<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" version="3.0">
  <display-name></display-name>
  <welcome-file-list>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>
  <filter>
    <filter-name>EncodeFilter</filter-name>
    <filter-class>org.studentinfo.filter.EncodeFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>EncodeFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  <filter>
    <filter-name>LoginFilter</filter-name>
    <filter-class>org.studentinfo.filter.LoginFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>LoginFilter</filter-name>
    <url-pattern>/Admin/*</url-pattern>
  </filter-mapping>
  <servlet>
    <servlet-name>LoginCheck</servlet-name>
    <servlet-class>org.studentinfo.servlet.Login</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>LoginOut</servlet-name>
    <servlet-class>org.studentinfo.servlet.LoginOut</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>Alter</servlet-name>
    <servlet-class>org.studentinfo.servlet.Alter</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>StuAlter</servlet-name>
    <servlet-class>org.studentinfo.servlet.StuAlter</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>LoginCheck</servlet-name>
    <url-pattern>/Login</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>LoginOut</servlet-name>
    <url-pattern>/LoginOut</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>Alter</servlet-name>
    <url-pattern>/Alter</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>StuAlter</servlet-name>
    <url-pattern>/StuAlter</url-pattern>
  </servlet-mapping>
</web-app>